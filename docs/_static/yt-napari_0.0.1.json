    "DataContainer": {
      "title": "DataContainer",
      "type": "object",
      "properties": {
        "filename": {
          "title": "Filename",
          "description": "the filename for the dataset to load",
          "type": "string"
        },
        "selections": {
          "title": "Selections",
          "type": "array",
          "items": {
            "$ref": "#/definitions/SelectionObject"
          }
        },
        "edge_units": {
          "title": "Edge Units",
          "description": "the units to use for left_edge and right_edge",
          "default": "code_length",
          "type": "string"
        }
      },
      "required": [
        "selections"
      ]
    }
